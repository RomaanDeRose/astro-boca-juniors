<style>
   nav{
      width: 90%;
      max-width: 900px;
      color: var(--blue-primary);
      display: flex;
      justify-content: space-between;
      align-items: center;
      margin: 0 auto;
      padding: 1rem 0rem;
   }
   nav .bx-menu{
      font-size: 2.5rem;
      cursor: pointer;
   }
   nav img{
     display: none;
   }
   nav ul{
      display:none
   }
   .social-links a{
      color: #fff;
      margin-left: 0.5rem;
   }
   .social-links a i{
      background-color: var(--blue-primary);
      font-size: 1.85rem;
      padding: 0.3rem;
      border-radius: 6px;
      transition: all 0.2s ease;
   }
   .social-links a i:hover{
      background-color: var(--blue-secondary);
      color: var(--yellow-primary);
      transform: translateY(-4px);
   }
   @media (min-width: 768px){
      nav .bx-menu{
         display: none;
      }
      nav img{
         display: block;
         width: 55px;
         object-fit: cover;
      }
      nav ul{
         display: flex;
         justify-content: center;
         list-style: none;
         padding: 0;
      }
      nav ul li{
         margin-left: 0.5rem;
      }
      nav ul li a{
         font-size: 1rem;
         text-decoration: none;
         color: var(--blue-primary);
         text-transform: uppercase;
         padding: 0.4rem 0.8rem;
         border-radius: 15px;
         transition: all 0.2s ease;
         position: relative;
      }
      nav ul li a::after{
         content: '';
         position: absolute;
         top: -15px;
         left: calc(50% - 2.5px);
         width: 5px;
         height: 5px;
         border-radius: 50%;
         background-color: var(--yellow-primary);
         transition: width 0.3s;
         opacity: 0;
         transition: all 0.2s ease;
      }
      nav ul li a:hover{
         /* background-color: var(--blue-primary);
         /* text-decoration: underline; */
         color: var(--yellow-primary);
      }
      nav ul li a:hover::after{
         top: -7px;
         opacity: 1;
      }
   }

</style>